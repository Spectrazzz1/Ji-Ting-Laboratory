block variables
- const title = "Title"
- let langHref = ""
if langPath
    - langHref = langPath


doctype html
html(lang=lang prefix="og: http://ogp.me/ns#")
    head
        meta(charset='UTF-8')
        meta(http-equiv='Content-Language' content=lang)
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name='distribution' content='global')
        meta(name='author' content='Kl√∂en Lansfiel')
        meta(name='robots' content='index,follow')
        block meta

        title !{title} - !{nav.title}

        link(type='text/css' rel='stylesheet' href='/stylesheets/styles.css')
        link(type='text/css' rel='stylesheet' href='/vendor/nprogress/nprogress.css')
        script(type='text/javascript' src="/vendor/alpine.min.js" defer)
        script(type='text/javascript' src="/vendor/nprogress/nprogress.js" defer)
        block head-scripts

    body(class="dark scrollbar-thin scrollbar-thumb-zinc-600 scrollbar-track-zinc-400")
        div(class="bg-white dark:bg-zinc-800")
            div(class="flex flex-col min-h-screen")
                include components/header
                div(id="router-view" class="container mx-auto mb-auto p-4")
                    block page
                include components/footer
        block body-scripts
        script(src="/scripts/main.js")
        script(src="/scripts/router.js")
